/*
	AC:WW Letter Struct [EUR | USA].
	Size: 0xF4.
*/
struct EUR_USA_LETTER {
	uint16_t TownID; // 0x0 - 0x1.
	uint8_t TownName[0x8]; // 8 Characters is the limit. 0x2 - 0x9.
	uint8_t Unresearched1[0xE]; // 0xA - 0x17.
	uint16_t TownID2; // 0x18 - 0x19.
	uint8_t TownName2[0x8]; // 8 Characters is the limit. 0x1A - 0x21.
	uint16_t PlayerID; // 0x22 - 0x23.
	uint8_t PlayerName[0x7]; // 7 Characters is the limit. 0x24 - 0x2A.
	uint8_t Unresearched2[0x5]; // 0x2B - 0x2F.
	char Intro[0x18]; // 24 Characters is the limit. 0x30 - 0x47.
	char Body[0x81]; // 129 Characters is the limit. 0x48 - 0xC7.
	char End[0x20]; // 32 Characters is the limit. 0xC8 - 0xE7.
	uint8_t Unresearched3; // 0xE8.
	PaperIDs PaperID; // 0xE9.
	uint8_t Unresearched4[0x2]; // 0xEA - 0xEB.
	uint16_t Item; // 0xEC - 0xED.
	uint8_t Unresearched5[0x6]; // 0x3F - 0xF3.
};


